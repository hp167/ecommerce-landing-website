*{
    margin:0px;
    padding:0;

}
:root {
 --navbar-height: 70px;
}
#logo img
{
    width: 150px;
margin: 20px 20px;
height:150px;
border-radius: 50px;
box-sizing: border-box;

}
#navbar {
    display:flex;
    position:relative;
    align-items:center;
    top:0px;

}

#navbar ul{
    display:flex;
}
#navbar::before {
    content: "";
    background-color: rgb(88, 34, 122);
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    z-index:-1;
    opacity: 0.7;
}
#navbar ul li{
    list-style:none;
    font-size: 30px;
    margin: 0px 15px;
    padding: 5px 5px;
    border-radius: 20px;
    transition: 0.3s;
    font-weight: 1000px;
}

#navbar ul li:hover{
    background-color: rgb(168, 96, 8);
    opacity: 0.8;
 list-style:none;
 font-size: 20px;
 border-radius: 20px;
}
 

#navbar ul li a{
    display: block;
    color:rgb(44, 3, 3);
    padding:4px 20px;
    border-radius: 20px;
    text-decoration: none;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
   
}
#home {
    display:flex;
    flex-direction: column;
    align-items: center;        
    padding:3px 20px;
    min-height: 50vh;
    font-size: 20px;
    position: relative;        
}

#home::before {
    content: "";
    background: url('../image/backpic.png') no-repeat center center/cover;
    position: absolute;
    height: 500px;               
    width: 100%;
    top: 0;
    left: 0;
    z-index:-1;
    opacity: 0.9;
 
}

#home h1 {
    font-size: 50px;
    margin-top: 200px;
    color: rgb(223, 231, 231);
    text-align: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: bold;
}
#home  p{
    font-size: 30px;
    margin-top: 20px;
    color: rgb(203, 214, 215);
    text-align: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
#home button{
    margin-top: 30px;
    padding: 10px 20px;
    font-size: 30px;
    border-radius: 25px;
    border: none;
    background-color: rgb(88, 34, 122);
    color: white;
    cursor: pointer;
    transition: 0.3s;
    animation: pop 1.2s ease-in-out infinite alternate;
}
#home button:hover{
    background-color: rgb(38, 23, 45);
    opacity: 0.8;
}


.center {
    text-align: center;
}

/* SERVICES SECTION */
#services {
    padding: 30px;
    background-color:rgb(214, 232, 236)
}

#services h1 {
    color: rgb(25, 21, 21);
    margin-bottom: 30px;
    text-align: center;
    font-size: 50px;
}

/* Boxes container */
.services-boxes {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

/* Individual box */
#services .box {
    border: 1px solid rgb(111, 175, 175);
    padding: 20px 20px;
    margin: 10px;
    background: lightsteelblue;
    border-radius: 20px;
    transition: 0.3s;
    width: 450px;
    height: 350px;
    box-sizing: border-box;
}

#services .box:hover {
    transform: scale(1.05);
    background-color: #657eba;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
}

#services .box img {
    width: 120px;
    margin-bottom: 15px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    flex-wrap: wrap;
    align-items: center;
}

#services .box h2 {
    font-size: 25px;
    margin-bottom: 15px;
    color: #333;
    text-align: center;
}

#services .box p {
    font-size: 20px;
    color: #555;
    text-align: center;
}
